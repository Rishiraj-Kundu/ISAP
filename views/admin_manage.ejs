<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Display Tutors</title>
</head>
<body>
  <h1 style="text-align: center;">Tutors List to be Approved</h1>
  <div class="table" style="display: flex;  justify-content: center; align-items: center; flex-direction: column; row-gap: 10px;">
  <table border="1" style="width:100px;">
    <tr>
      <th style="padding:10px">ID</th>
      <th style="padding:10px">Full Name</th>
      <th style="padding:10px">Email</th>
      <th style="padding:10px">Subject</th>
      <th style="padding:10px">Experience</th>
      <th style="padding:10px" >Qualification</th>
      <th style="padding:10px" >Availability</th>
      <th style="padding:10px">Action</th>
    </tr>
    <% tutors.forEach(tutor => { %>
      <tr>
        <td style="padding:10px"><%= tutor.id %></td>
        <td style="padding:10px"><%= tutor.fullName %></td>
        <td style="padding:10px"><%= tutor.email %></td>
        <td style="padding:10px"><%= tutor.subject %></td>
        <td style="padding:10px"><%= tutor.experience %></td>
        <td style="padding:10px"><%= tutor.qualification %></td>
        <td style="padding:10px"><%= tutor.availability %></td>
        <td>
          <form action="/approve/<%= tutor.id %>" method="post">
            <input type="text" name="fullName" placeholder="Full Name" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Approve</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <button class="logout-button" onclick="logout()">Logout</button>
</div>
    <!-- <button class="back-button" onclick="goBack()">Back</button> -->

    <script>
        function logout() {
            // Add your logout logic here
           // alert('Logout button clicked');
           //window.location.href("index.ejs");
           window.location.href="/";
        }

        function goBack() {
            // Add your back button logic here
            alert('Back button clicked');
        }
    </script>
</body>
</html>
