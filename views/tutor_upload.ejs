<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutor Dashboard</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="number"],
        textarea,
        input[type="file"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 12px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            background-color: #529ac7;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <form action="/upload-course" method="post" enctype="multipart/form-data">
        <h1>Tutor Dashboard</h1>
        <label for="courseName">Course Name:</label>
        <input type="text" name="name" required>

        <label for="totalModules">Total Modules:</label>
        <input type="number" name="totalModules" required>

        <!-- Module-wise input fields -->
        <div id="moduleFieldsContainer"></div>

        <button type="button" onclick="addModule()">Add Module</button><br></br>
        <button type="submit">Upload Course</button>

        <script>
            function addModule() {
                const container = document.getElementById('moduleFieldsContainer');
                const moduleNumber = container.childElementCount + 1;

                const moduleDiv = document.createElement('div');
                moduleDiv.innerHTML = `
                    <label for="moduleDescription${moduleNumber}">Module ${moduleNumber} Description:</label>
                    <textarea name="moduleDescription${moduleNumber}"></textarea>

                    <label for="moduleFile${moduleNumber}">Module ${moduleNumber} File (PDF/Video):</label>
                    <input type="file" name="moduleFile${moduleNumber}" accept=".pdf, .mp4" required>
                `;

                container.appendChild(moduleDiv);
            }
        </script>
    </form>
</body>
</html>

